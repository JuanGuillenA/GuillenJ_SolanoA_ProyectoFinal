<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports 
        http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
    name="ocupacion_medico" pageWidth="595" pageHeight="842" columnWidth="515"
    leftMargin="40" rightMargin="40" topMargin="50" bottomMargin="50">

    <!-- Parámetros de entrada -->
    <parameter name="MedicoId" class="java.lang.Long"/>
    <parameter name="FechaDesde" class="java.time.LocalDate"/>
    <parameter name="FechaHasta" class="java.time.LocalDate"/>

    <!-- Campos del datasource: ahora apuntan a tu entidad Cita -->
    <field name="medico"      class="ec.edu.ups.citas.modelo.Medico"/>
    <field name="paciente"    class="ec.edu.ups.citas.modelo.Usuario"/>
    <field name="fecha"       class="java.time.LocalDate"/>
    <field name="hora"        class="java.time.LocalTime"/>
    <field name="estado"      class="ec.edu.ups.citas.modelo.Estado"/>

    <!-- Variable de conteo de citas por médico -->
    <variable name="TotalCitas" class="java.lang.Integer" calculation="Count">
        <variableExpression><![CDATA[$F{medico}.getNombre()]]></variableExpression>
    </variable>

    <!-- Título -->
    <title>
      …
    </title>

    <!-- Encabezados -->
    <columnHeader>
        <band height="20">
            <staticText>
                <reportElement x="0" y="0" width="100" height="20"/>
                <text><![CDATA[Fecha]]></text>
            </staticText>
            <staticText>
                <reportElement x="100" y="0" width="80" height="20"/>
                <text><![CDATA[Hora]]></text>
            </staticText>
            <staticText>
                <reportElement x="180" y="0" width="150" height="20"/>
                <text><![CDATA[Paciente]]></text>
            </staticText>
            <staticText>
                <reportElement x="330" y="0" width="100" height="20"/>
                <text><![CDATA[Estado]]></text>
            </staticText>
        </band>
    </columnHeader>

    <!-- Grupo por médico -->
    <group name="MedicoGroup">
        <groupExpression><![CDATA[$F{medico}.getNombre()]]></groupExpression>
        <groupHeader>
            <band height="20">
                <staticText>
                    <reportElement x="0" y="0" width="515" height="20"/>
                    <textElement><font isBold="true"/></textElement>
                    <text><![CDATA[
                        Médico: $F{medico}.getNombre() 
                        - Especialidad: $F{medico}.getEspecialidad().getNombre()
                    ]]></text>
                </staticText>
            </band>
        </groupHeader>
        <groupFooter>
            <band height="20">
                <staticText>
                    <reportElement x="350" y="0" width="100" height="20"/>
                    <text><![CDATA[Total Citas:]]></text>
                </staticText>
                <textField>
                    <reportElement x="450" y="0" width="65" height="20"/>
                    <textElement textAlignment="Right"/>
                    <textFieldExpression><![CDATA[$V{TotalCitas}]]></textFieldExpression>
                </textField>
            </band>
        </groupFooter>
    </group>

    <!-- Detalle de citas -->
    <detail>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="100" height="20"/>
                <textFieldExpression><![CDATA[$F{fecha}.toString()]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="100" y="0" width="80" height="20"/>
                <textFieldExpression><![CDATA[$F{hora}.toString()]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="180" y="0" width="150" height="20"/>
                <textFieldExpression><![CDATA[$F{paciente}.getDisplayName()]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="330" y="0" width="100" height="20"/>
                <textFieldExpression><![CDATA[$F{estado}.name()]]></textFieldExpression>
            </textField>
        </band>
    </detail>

</jasperReport>
